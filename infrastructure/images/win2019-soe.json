            "floppy_files": [
                "win2019/Autounattend.xml",
                "winrm.ps1",
                "sysprep.bat",
                "autounattend_sysprep.xml"
            ],
            "guest_additions_mode": "attach",
            "guest_os_type": "Windows2016_64",
            "headless": true,
            "http_directory": "http",
            "shutdown_command": "a:/sysprep.bat",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "4" ]
            ],
            "disk_size": 262144,
            "communicator": "winrm",
            "winrm_username": "packer",
            "winrm_password": "Fractalsol365",
            "winrm_timeout": "2h"
        },
        {
            "type": "hyperv-iso",
            "iso_checksum": "48cd91270581d1be10c3ff3ad6c41cce",
            "iso_checksum_type": "md5",
            "iso_url": "https://software-download.microsoft.com/download/sg/17763.253.190108-0006.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us.iso",
            "floppy_files": [
                "win2019/Autounattend.xml",
                "winrm.ps1",
                "sysprep.bat",
                "autounattend_sysprep.xml"
            ],
            "headless": true,
            "http_directory": "http",
            "shutdown_command": "a:/sysprep.bat",
            "ram_size": 4096,
            "disk_size": 262144,
            "switch_name": "Default Switch",
            "communicator": "winrm",
            "winrm_username": "packer",
            "winrm_password": "Fractalsol365",
            "winrm_timeout": "2h"
        },
        {
            "type": "azure-arm",
        
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
        
            "managed_image_resource_group_name": "CommonRG",
            "managed_image_name": "{{user `box_name`}}",
        
            "os_type": "Windows",
            "image_publisher": "MicrosoftWindowsServer",
            "image_offer": "WindowsServer",
            "image_sku": "2016-Datacenter",
            "image_version": "latest",
        
            "communicator": "winrm",
            "winrm_use_ssl": "true",
            "winrm_insecure": "true",
            "winrm_timeout": "30m",
            "winrm_username": "packer",
        
            "location": "WestUS2",
            "vm_size": "Standard_F2s",
            "managed_image_storage_account_type": "Premium_LRS"
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "script": "VirtualBox/installadditions.ps1",
            "only": ["virtualbox-iso"]
        },
        {
            "type": "powershell",
            "script": "HyperV/integration.ps1",
            "only": ["hyperv-iso"]
        },
        {
            "type": "powershell",
            "script": "rdpenable.ps1",
            "only": ["virtualbox-iso","hyperv-iso"]
        },
        { "type": "powershell", "script": "nodefender-2019.ps1" },
        { "type": "windows-restart" },
        {
            "type": "powershell",
            "script": "winrm.ps1",
            "only": ["azure-arm"]
        },
        { "type": "powershell", "script": "PackageManagementProviderResource.ps1" },
        { "type": "powershell", "script": "basepsmodules.ps1" },
        { "type": "powershell", "script": "domainclientpsmodules.ps1" },
        { "type": "powershell", "script": "xcredserver.ps1" },
        { "type": "powershell", "script": "waitforcpucalm.ps1" },
        {
            "type": "powershell",
            "script": "azure/sysprep.ps1",
            "only": ["azure-arm"]
        }
    ],
    "post-processors": [
        {
          "type": "vagrant",
          "output": "{{user `box_name`}}.box",
          "vagrantfile_template": "vagrantfile-windows.template"
        }
    ],
    "variables": {
        "box_name": "win2019-soe",
        "client_id": "{{env `ARM_CLIENT_ID`}}",
        "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
        "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
        "tenant_id": "{{env `ARM_TENANT_ID`}}"
    }
}